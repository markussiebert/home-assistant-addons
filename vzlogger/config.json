{
  "name": "vzLogger",
  "version": "0.0.1",
  "slug": "vzLogger",
  "description": "vzlogger for homeassistant",
  "arch": ["armhf", "armv7", "amd64"],
  "map": ["share"],
  "startup": "services",
  "panel_icon": "mdi:zigbee",
  "boot": "auto",
  "init": false,
  "ingress": false,
  "kernel_modules": true,
  "usb": true,
  "udev": true,
  "gpio": true,
  "apparmor": false,
  "privileged": ["SYS_RAWIO"],
  "devices": ["/dev/mem"],
  "options": {
    "configfile": "/share/vzlogger.conf",
    "device": null
  },
  "schema": {
    "device": "device(subsystem=tty)",
    "configfile": "str"
  },
  "ports_description": {
    "8081/tcp": "vzlogger http server for pulling data (Not required, Not secure)"
  },
  "image": "ghcr.io/markussiebert/homeassistant-addon-vzlogger/{arch}"
}
