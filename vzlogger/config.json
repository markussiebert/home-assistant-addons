{
  "name": "vzLogger",
  "version": "main",
  "slug": "vzLogger",
  "description": "vzlogger for homeassistant",
  "arch": ["armhf", "armv7", "amd64"],
  "startup": "application",
  "boot": "auto",
  "kernel_modules": true,
  "usb": true,
  "udev": true,
  "gpio": true,
  "apparmor": false,
  "privileged": ["SYS_RAWIO"],
  "devices": ["/dev/mem"],
  "options": {
    "retry": 0,
    "verbosity": 1,
    "log": "",
    "local": {
      "enabled": true,
      "port": 8080,
      "index": true,
      "timeout": 0,
      "buffer": 0
    },
    "meters": [
      {
        "enabled": false,
        "allowskip": false,
        "interval": -1,
        "aggtime": -1,
        "aggfixedinterval": false,
        "channels": [],
        "protocol": "invalid"
      }
    ]
  },
  "schema": {
    "retry": "int",
    "verbosity": "int",
    "log": "str",
    "local": {
      "enabled": "bool",
      "port": "int",
      "index": "bool",
      "timeout": "int",
      "buffer": "int"
    },
    "meters": [
      {
        "enabled": "bool",
        "allowskip": "bool",
        "interval": "int",
        "aggtime": "int",
        "aggfixedinterval": "bool",
        "channels": [],
        "protocol": "str"
      }
    ]
  }
  "ports": {
    "8088/tcp": 10080
  },
  "ports_description": {
    "8080/tcp": "vzlogger server"
  },
  "image": "ghcr.io/markussiebert/homeassistant-addon-vzlogger/{arch}"
}
